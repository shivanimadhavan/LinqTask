

@model IEnumerable<LinqTask.Models.ListOfPurchaseOrders>

@{ ViewBag.Title = "Purchase order against Customer"; }

<h2 class="text-center text-uppercase">Product order against Customer</h2>
<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container-fluid py-4">

        <table class="table table-striped table-bordered">

            <thead class="bg-dark text-white">
                <tr>
                    <th>Customer Name</th>
                    <th>POID</th>
                    <th>Product Name</th>
                    <th>Price</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.customer.CustomerName</td>
                        <td>@item.purchaseOrder.POID</td>

                        <td>@item.product.ProductName</td>
                        <td>@item.product.Price</td>

                    </tr>
}
            </tbody>
        </table>
    </div>
</body>
</html>

